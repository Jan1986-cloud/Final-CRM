{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "start": {
        "cmd": "gunicorn 'src.main:create_app()' --bind 0.0.0.0:$PORT"
      }
    }
  },
  "deploy": {
    "healthcheckPath": "/health",
    "healthcheckTimeout": 120
  }
}
